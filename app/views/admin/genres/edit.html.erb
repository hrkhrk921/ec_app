<div class="row">
  <h2>ジャンル編集</h2>
</div>
<div class="row">
  <%= form_for(@genre, url: {controller: "admin/genres",action: "update"}) do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <label><%= f.radio_button :is_valid,true,class: :rd %>有効</label>
  <label><%= f.radio_button :is_valid,false,class: :rd %>無効</label>
  <%= f.submit "追加",class: "btn btn-primary" %>
  <% end %>
</div>