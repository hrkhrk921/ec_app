<div class="row">
  <h2>ジャンル一覧</h2>
</div>
<div class="row">
  <%= form_for(@genre, url: {controller: "admin/genres",action: "create"}) do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <label><%= f.radio_button :is_valid,true,class: :rd %>有効</label>
  <label><%= f.radio_button :is_valid,false,class: :rd %>無効</label>
  <%= f.submit "追加",class: "btn btn-primary" %>
  <% end %>
</div>
<div class="row">
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <% if genre.is_valid? %>
          <td>有効</td>
        <% else %>
          <td>無効</td>
        <% end %>
        <td><%= link_to "編集する",edit_admin_genre_path(genre) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>