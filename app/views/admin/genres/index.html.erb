<div class="row">
  <%= form_with(@genre, url:{controller: "admin/genres",action: "create"}) do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <label><%= f.radio_botton,:is_valid,true,class: :rd %>有効</label>
  <label><%= f.radio_button,:is_valid,false,class: :rd %>無効</label>
  <%= f.submit "追加",class: "btn btn-primary" %>
  <% end %>
</div>