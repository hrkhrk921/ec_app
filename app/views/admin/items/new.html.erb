<div class="row">
  <h2>商品登録</h2>
</div>
<div class="row">
  <%= form_for(@item, url: {controller: "admin/items",action: "create"}) do |f| %>
  <label>商品名</label>
  <%= f.text_field :name %>
  <label><%= f.radio_button :is_valid,true,class: :rd %>有効</label>
  <label><%= f.radio_button :is_valid,false,class: :rd %>無効</label>
  <%= f.submit "追加",class: "btn btn-primary" %>
  <% end %>
</div>